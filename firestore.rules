// Firestore Security Rules for Production
// Deploy with: firebase deploy --only firestore:rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return request.auth.token.admin == true;
    }
    
    function isOwner(uid) {
      return request.auth.uid == uid;
    }
    
    function hasRole(uid, role) {
      return get(/databases/$(database)/documents/users/$(uid)).data.role == role;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own document
      allow read: if isOwner(userId);
      
      // Admins can read any user document
      allow read: if isAdmin();
      
      // Users can create their own document during registration
      allow create: if isOwner(userId) && request.resource.data.role == "user";
      
      // Users can update their own non-role fields
      allow update: if isOwner(userId) 
        && request.resource.data.role == resource.data.role
        && request.resource.data.keys().hasAll(['name', 'email', 'uid']);
      
      // Only admins can change roles
      allow write: if isAdmin();
    }
    
    // Applications collection
    match /applications/{userId} {
      // Users can read their own application
      allow read: if isOwner(userId);
      
      // Admins can read all applications
      allow read: if isAdmin();
      
      // Users can create their first application
      allow create: if isOwner(userId) 
        && request.resource.data.uid == request.auth.uid
        && request.resource.data.status == "submitted"
        && request.resource.data.eventType in ["gamejam", "hackathon"];
      
      // Users can only update their draft applications
      allow update: if isOwner(userId) 
        && resource.data.status == "draft"
        && request.resource.data.uid == resource.data.uid;
      
      // Only admins can approve/reject applications
      allow update: if isAdmin()
        && request.resource.data.status in ["approved", "rejected", "draft"]
        && request.resource.data.eventType == resource.data.eventType;
      
      // Prevent deletion
      allow delete: if false;
    }
    
    // Submissions collection (game uploads, trailers)
    match /submissions/{userId} {
      // Users can read/write their own submissions
      allow read, write: if isOwner(userId)
        && request.resource.data.uid == request.auth.uid;
      
      // Admins can read all submissions
      allow read: if isAdmin();
      
      // Prevent deletion
      allow delete: if false;
    }
    
  }
}
